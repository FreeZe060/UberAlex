<!DOCTYPE html>
<html lang="fr">
    <head>
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700;900&display=swap">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/static/css/partials/header.css">
    </head>
    <body>

        <header class="header">
            <div class="header_content">
                <div class="header_profile-container">
                    <a href="/"><span class="header_profile-span">UberAlex</span></a><br>
                </div>

                <div class="header_main">
                    <ul class="header_links">
                        <li class="header_link-li">
                            <a href="/" class="header_link"> Home </a>
                        </li>
                        <li class="header_link-li">
                            <a href="./#about" class="header_link"> Infos </a>
                        </li>
                        <li class="header_link-li">
                            <img src="/assets/img/panier.png" alt="ImgPanier" class="header_link-less" />
                        </li>
                        <% if (profile == undefined) { %>
                            <li class="header_link-li">
                                <img src="/assets/img/menu.png" alt="ImgProfile" class="header_link-less" id="menuButton" onclick="toggleMenu()">
                            </li>
                        <% } else { %>
                            <img src="/assets/img/profile.png" alt="ImgProfile" class="header_link-less" />
                        <% } %>
                    </ul>
                </div>
            </div>  
        </header>

        <div id="sideMenu" class="sidenav">
            <span class="closebtn">&times;</span>
            <button class="button_connection">
                <a href="/user/reg_member"> Se connecter </a>
            </button>
            <button class="button_inscription">
                <a href="/user/reg_member"> S'inscrire </a>
            </button>
            <a href="/user/reg_restaurateur">Vous etes restaurateurs</a>
            <a href="/user/reg_restaurateur">Devenez restaurateurs</a>
        </div>
        <script src="/static/js/sidenav.js" defer></script>
    </body>
</html>