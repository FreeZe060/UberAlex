<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no">
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700;900&display=swap">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/static/css/profile.css">
    </head>

    <%- include('./partials/header.ejs') %>
    <body>

        
        <section id="home" class="profile-presentation">
            <div class="stack">
                <div id="boutons">
                    <button class="bouton-onglet selected" onclick="choisirOnglet(0)">
                        <a href="#">Informations du Compte</a>
                    </button>
                    <button class="bouton-onglet" onclick="choisirOnglet(1)">
                        <a href="#">Vos Commandes</a>
                    </button>
                    <button class="bouton-onglet" onclick="choisirOnglet(2)">
                        <a href="#">Vos Favoris</a>
                    </button>
                    <div class="trait-noir"></div>
                </div>
            </div>
            <div class="container_info_profile">
                <div class="container_img_profile">
                    <div class="profile-div">
                    </div>
                </div>
            </div>     
        </section>
        
        <section id="profile-sec" class="profile_contenu">
            <div id="contenu">
                <div id="info" style="display: none;" class="div_info_perso">
                    <h2 class="info-title"><strong> Informations Personnelles : </strong></h2>
                    <p class="info-item">Nom : <br>
                        <span> Nom de famille </span>
                    </p>
                    <div class="div_info_separation"></div>
                    <p class="info-item">Numéro de téléphone : <br> 
                        <span> Numéro de téléphone </span>
                    </p>
                    <div class="div_info_separation"></div>
                    <p class="info-item">Adresse email : <br>
                        <span> Adresse email </span>
                    </p>
                    <div class="div_info_separation"></div>
                </div>
                <div id="commande" style="display: none;" class="div_commande_perso">
                    <h2 class="commande_title">Vos commandes</h2>
                    <div class="commande_item">
                        <img src="restaurant_image.jpg" alt="Restaurant Image">
                        <div class="details">
                            <div class="commande_item_info_resto">
                                <ul>
                                    <li>
                                        <h2>Macdo</h2>
                                    </li>
                                    <li>
                                        4.5
                                    </li>
                                </ul>
                            </div>
                            <div class="commande_item_info_resto">
                                <ul>
                                    <li>
                                        <p>3 plats pour $20</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="commande_details_items">
                                <ul>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="actions">
                            <button class="btn_more">Afficher plus</button>
                            <button class="btn_more">Commander à nouveau</button>
                        </div>
                    </div>
                    <div class="div_info_separation"></div>
                    <div class="commande_item">
                        <img src="restaurant_image.jpg" alt="Restaurant Image">
                        <div class="details">
                            <div class="commande_item_info_resto">
                                <ul>
                                    <li>
                                        <h2>Macdo</h2>
                                    </li>
                                    <li>
                                        4.5 <br>
                                    </li>
                                    <li>
                                        <p>3 plats pour $20</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="commande_details_items">
                                <ul>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="actions">
                            <button class="btn_more">Afficher plus</button>
                            <button class="btn_more">Commander à nouveau</button>
                        </div>
                    </div>
                    <div class="div_info_separation"></div>
                    <div class="commande_item">
                        <img src="restaurant_image.jpg" alt="Restaurant Image">
                        <div class="details">
                            <div class="commande_item_info_resto">
                                <ul>
                                    <li>
                                        <h2>Macdo</h2>
                                    </li>
                                    <li>
                                        4.5
                                    </li>
                                </ul>
                            </div>
                            <div class="commande_item_info_resto">
                                <ul>
                                    <li>
                                        <p>3 plats pour $20</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="commande_details_items">
                                <ul>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                    <li>
                                        <div class="horizontal">
                                            <span class="item_qty">1</span>
                                            <h2 class="title_menu">Menu Burger</h2>
                                        </div>
                                        <p>Menu Burger Bacon, Frites, Coca</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="actions">
                            <button class="btn_more">Afficher plus</button>
                            <button class="btn_more">Commander à nouveau</button>
                        </div>
                    </div>
                    
                    <div class="div_info_separation"></div>
                    <div class="show-all-btn">
                        <button class="btn_all_commande">Afficher toutes vos commandes</button>
                    </div>
                </div>
                <div id="favoris" style="display: none;">
                    <h2>Vos Favoris</h2>
                    <% orders.forEach(function(order) { %>
                        <div class="structures__structure" style="background-image: url('../assets/img/logo/<%= order.restaurant_img %>'); background-size: contain;">
                            <div class="structures__structure-details">
                                <ul>
                                    <li>
                                        <%= order.name %>
                                    </li>
                                    <li>
                                        <%= order.date %>
                                    </li>
                                    <li class="rating">
                                        <%= order.status %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div> 
        </section>
        <script src="/static/js/Profile.js" defer></script>
    </body>

    <%- include('./partials/footer2.ejs') %>


</html>